cls() -- clear the screen

-- draw a dark-blue rectangle
rectfill(40,40,80,80,1)

-- draw a light-blue rectangle
-- on top of the previous shape 
rectfill(50,50,70,70,12)


-- if a larger object is drawn
-- after a smaller one and
-- occupies the same part of
-- the screen, the smaller
-- object drawn first will
-- be concealed by the larger
-- object drawn after it

-- draw a purple rectangle 
-- (hidden behind the next shape)
rectfill(50,94,70,114,2)

-- draw a yellow rectangle
-- (comment out this line to
-- see the purple shape beneath)
rectfill(40,84,80,124,10)
