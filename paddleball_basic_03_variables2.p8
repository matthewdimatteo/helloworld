pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
-- paddleball
-- lesson 03: variables 2
-- by matthew dimatteo

-- runs once at start
function _init()

	-- declare variables for paddle
	padn = 1 -- sprite number
	padx = 60 -- x coordinate
	pady = 118 -- y coordinate
	
	-- declare variables for ball
	baln = 2 -- sprite number
	balx = 60 -- x coordinate
	baly = 2 -- y coordinate
	speed = 3 -- speed	

end

-- loops 30 times per second
function _update()

	-- increase ball y by its speed
	baly = baly + speed
	
end

-- loops 30 times per second
function _draw()
	cls() -- clears the screen
	
	-- draw paddle sprite
	spr(padn,padx,pady)
	
	-- draw ball sprite
	spr(baln,balx,baly)
end
