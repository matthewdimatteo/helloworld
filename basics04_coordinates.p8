version 42
__lua__
-- basics series
-- example 04: coordinates
-- by matthew dimatteo

-- runs once at start
function _init()
	n = 2 -- sprite number
	x = 0 -- x position
	y = 0 -- y position
	xspd = 0.2 --  hor speed
	yspd = 0.3 -- vert speed
end

-- loops 30x/sec
function _update()
 -- move the ball
	x = x + xspd
	y = y + yspd 
end

-- loops 30x/sec
function _draw()
	cls() -- clear screen
	spr(n,x,y) -- ball sprite
	
	-- print x,y position
	print(ceil(x)..","..ceil(y))
end -- end function _draw()
