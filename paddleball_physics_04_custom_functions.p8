-- runs once at the start
-- set starting conditions here
function _init()
    gravity = 0.3 -- global variable
    make_pad()
end

-- runs 30x/sec
-- perform calculations here
function _update()
    move_pad()
end -- end _update()

-- runs 30x/sec
-- draw graphics here
function _draw()
	cls() -- clear the screen
    spr(pad.n,pad.x,pad.y)
end
-->8

-- pad
function make_pad()
    pad = {} -- object
    pad.n = 1 -- sprite number
    pad.x = 60 -- x position
    pad.y = 118 -- y position
    pad.w = 8 -- width
    pad.h = 2 -- height
    pad.spd = 3 -- speed
end

function move_pad()
	
	-- left arrow
    if btn(0) then
        pad.x -= pad.spd
    end -- end if btn(0)
    
    -- right arrow
    if btn(1) then
        pad.x += pad.spd
    end -- end if btn(1)
    
    -- keep on screen left
    if pad.x < 0 then
        pad.x = 0
    end -- end if pad.x < 0
    
    -- keep on screen right
    if pad.x > 128-pad.w then
        pad.x = 120
    end -- end if pad.x > 120
 
end -- end move_pad()
