-- example 05: tables
-- by matthew dimatteo

-- runs once at start
function _init()
	
	-- makes an object, or table
	ball = {}
	
	-- tables are variables that
	-- can contain other variables
	ball.n = 1 -- sprite number
	ball.x = 60 -- x position
	ball.y = 2 -- y position
end

-- loops 30x/sec
function _update()
	ball.y += 2 -- change y pos
end

-- loops 30x/sec
function _draw()
	cls() -- clear the screen
	
	-- draw ball sprite
	spr(ball.n,ball.x,ball.y)
end
