-- example 4a: tables
-- by matthew dimatteo

-- runs once at start
function _init()
	
	-- makes an object, or table
	ball = {}
	
	-- tables are variables that
	-- can contain other variables
	ball.x = 60 -- xpos
	ball.y = 2 -- y position
	ball.n = 1 -- sprite number

end

-- loops 30x/sec
function _update()
 -- update variables
 -- handle input
 -- move game objects

	ball.y += 2 -- change y pos
end

-- loops 30x/sec
function _draw()
	cls() -- clear the screen
	
	-- draw sprites with spr()
	spr(ball.n,ball.x,ball.y)

end
