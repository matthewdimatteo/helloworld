-- paddleball
-- lesson 02: variables
-- by matthew dimatteo

-- *** runs once at start
-- variables, objects
function _init()

	-- declare a variable called y
	-- and give it a value of 2
	y = 2
	
end -- /function _init()

-- *** runs 30x/sec
-- movement, calculation
function _update()

	-- increase y by 1 each frame
	y = y + 1
	
end -- /function _update()

-- *** runs 30x/sec
-- output/graphics
function _draw()
	cls() -- refresh screen

	-- draw paddle at x=60, y=118
	spr(1,60,118)

	-- ** draw ball sprite at
	-- variable y position
	spr(2,60,y)
end -- /function _draw()
