__lua__
-- paddleball
-- lesson 02: variables
-- by matthew dimatteo

-- runs once at start
function _init()

	-- declare a variable called y
	-- and give it a value of 2
	y = 2
	
end

-- loops 30 times per second
function _update()

	-- increase y by 1 each frame
	y = y + 1
	
end

-- loops 30 times per second
function _draw()
	cls() -- clears the screen

	-- draw paddle at x=60, y=118
	spr(1,60,118)

	-- draw ball sprite at a
	-- variable y position
	spr(2,60,y)
end
