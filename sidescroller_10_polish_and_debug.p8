-- call this function in _draw()
function debug_scrn()

	-- draw collision hitbox
	if mcollide(plyr,‚¨ÖÔ∏è,0)
	or mcollide(plyr,‚û°Ô∏è,0)
	or mcollide(plyr,‚¨áÔ∏è,0)
	then
		rect(rx1,ry1,rx2,ry2,8)
	end -- /if mcollide
	
	-- display active btn presses
	c=10 -- color
	if btn(‚¨ÖÔ∏è) then
		print("‚¨ÖÔ∏è",plyr.x-10,plyr.y+2,c)
	end --/if btn(‚¨ÖÔ∏è)
	
	if btn(‚û°Ô∏è) then
		print("‚û°Ô∏è",plyr.x+10,plyr.y+2,c)
	end --/if btn(‚û°Ô∏è)
	
	if btn(‚¨ÜÔ∏è) then
		print("‚¨ÜÔ∏è",plyr.x,plyr.y-8,c)
	end --/if btn(‚¨ÜÔ∏è)
	
	if btn(‚ùé) then
		print("‚ùé",plyr.x,plyr.y-8,c)
	end --/if btn(‚ùé)
	
	-- debug mode instructions
	print("debug mode (z to toggle)",12,2,5)
	
	-- print player x,y position
	coords = flr(plyr.x)..","..flr(plyr.y)
	print(coords,plyr.x-5,plyr.y+10,7)
	
	-- print movement data
	print("dx:"..plyr.dx,12,10,0)
	print("dy:"..plyr.dy,12,18,0)
	print("jumps left: "..plyr.jumps,12,26,0)

	-- feel free to add or replace with
	-- whatever data you are troubleshooting
	
end -- /function debug_scrn()
