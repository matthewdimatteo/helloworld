-- runs once at start
-- variables, objects
function _init()

	-- *** debug mode
	debug = true

	-- physics forces
	fric = 0.85 -- friction
	grav = 0.3 -- gravity

	-- variables for plyr
	make_plyr() -- tab 1
end -- /function _init()

-- runs 30x/sec
-- movement, calculation
function _update()
	move_plyr() --  tab 2

	-- *** z to toggle debug mode 
	if btnp(üÖæÔ∏è) then
		if debug == true then
			debug = false
		else
			debug = true
		end -- /if debug
	end -- /if btnp(üÖæÔ∏è)

end -- /function _update()

-- runs 30x/sec
-- output/graphics
function _draw()
	cls() -- refresh screen
	map() -- draw map

	-- *** draw player sprite 
	-- the last value given to spr is
	-- a true/false (whether to flip)
	-- the sprite. but we must also
	-- provide all other optional values
	-- between x,y and flip (w,h)
	-- divide w,h by 8 to go from pixels
	-- to tiles (these values also allow
	-- you to draw larger sprites)
	spr(plyr.n,plyr.x,plyr.y,plyr.w/8,plyr.h/8,plyr.flip)

	-- *** show debug screen 
	if debug then
		debug_scrn() -- tab 4
	else
		print("press z for debug mode",19,2,5)
	end -- /if debug

end -- /function _draw()
