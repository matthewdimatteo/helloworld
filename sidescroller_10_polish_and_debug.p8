-- move player
-- call this function in _update()
function move_plyr()
	
	-- apply friction so the plyr
	-- eventually stops moving
	plyr.dx *= fric
	
	-- apply gravity so the plyr
	-- does not float endlessly
	plyr.dy += grav
	
	-- move left
	if btn(‚¨ÖÔ∏è) then
		-- subtract from change in x
		plyr.dx -= plyr.xspd
		
		-- *** track direction 
		plyr.dir = ‚¨ÖÔ∏è
		
		-- *** flip sprite 
		plyr.flip = true
	end -- /if btn(‚¨ÖÔ∏è)
	
	-- move right
	if btn(‚û°Ô∏è) then
		-- add to change in x
		plyr.dx += plyr.xspd

		-- *** track direction 
		plyr.dir = ‚û°Ô∏è
		
		-- *** un-flip sprite 
		plyr.flip = false
	end -- /if btn(‚¨ÖÔ∏è)
	
	-- jump
	if (btnp(‚¨ÜÔ∏è) or btnp(‚ùé))
	and plyr.jumps > 0
	then
		plyr.dy = -plyr.yspd
		plyr.jumps -= 1
	end -- /if btnp(‚¨ÜÔ∏è/‚ùé)
	
	-- test collision below
	if plyr.dy > 0 then
	
		-- stop falling when a solid
		-- tile is below the player
		if mcollide(plyr,‚¨áÔ∏è,0)
			then
			plyr.dy = 0
			
			-- reset jump count
			plyr.jumps = plyr.basejumps

			-- correct y position if
			-- fell into ground
			plyr.y -= plyr.y%8
		end -- /if mcollide down
	
	end -- /if plyr.dy < / > 0

	-- test collision on left
	if plyr.dx < 0 then
	
		-- prevent movement through
		-- walls to the left
		if mcollide(plyr,‚¨ÖÔ∏è,0) then
			plyr.dx = 0
		
			-- correct x position to
			-- avoid getting stuck in wall
			plyr.x=ceil((plyr.x-1)/8)*8
		end -- /if mcollide left
	
	-- test collision on right
	elseif plyr.dx > 0 then
	
		-- prevent movement through
		-- walls to the right
		if mcollide(plyr,‚û°Ô∏è,0) then
			plyr.dx = 0
		
			-- correct x position to
			-- avoid getting stuck in wall
			plyr.x=flr((plyr.x+1)/8)*8
			--plyr.x -= plyr.x%8
		end -- /if mcollide right
	
	end -- /if plyr.dx < / > 0
	
	-- update x,y by the calculated
	-- change (delta x, delta y)
	plyr.x += plyr.dx
	plyr.y += plyr.dy
	
end -- /function move_plyr()
