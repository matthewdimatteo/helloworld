	cls() -- clear screen
	map() -- draw map
	spr(plyr.n,plyr.x,plyr.y)
end -- end function _draw()
-->8
-- make player
function make_plyr()
	plyr={} -- table for plyr obj
	plyr.n=1 -- sprite number
	
	-- x,y coordinates
	plyr.x=7*8 -- x=56 pixels
	plyr.y=11*8 -- y=88 pixels
	
	plyr.xspd=4 -- x speed
end -- end function make_plyr()
-->8
-- move player
function move_plyr()
	
	-- move left
	if btn(⬅️) then
		plyr.x -= plyr.xspd
	end -- end if btn(⬅️)
	
	-- move right
	if btn(➡️) then
		plyr.x += plyr.xspd
	end -- end if btn(➡️)
	
end -- end function move_plyr()
