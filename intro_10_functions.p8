-- runs once at start
-- variables, objects
function _init()
	make_plyr() -- *** tab 1
end -- /function _init()

-- runs 30x/sec
-- movement, calculation
function _update()
	move_plyr() -- *** tab 2	
end -- /function _update()

-- runs 30x/sec
-- output/graphics
function _draw()
	cls() -- refresh screen
	spr(n,x,y) -- draw player
	spr(2,116,60) -- draw key
end -- /function _draw()
-->8
-- *** make player
function make_plyr()
	n=1 -- sprite number
	x=4 -- x coordinate
	y=60 -- y coordinate
	spd=1 -- speed
end -- /function make_plyr()
-->8
-- *** move player
function move_plyr()

	-- move left
	if btn(⬅️) then
		x = x - spd
	end -- /if btn(⬅️)
	
	-- move right
	if btn(➡️) then
		x = x + spd
	end -- /if btn(➡️)
	
	-- move up
	if btn(⬆️) then
		y = y - spd
	end -- /if btn(⬆️)
	
	-- move down
	if btn(⬇️) then
		y = y + spd
	end -- /if btn(⬇️)
	
end -- /function move_plyr()
