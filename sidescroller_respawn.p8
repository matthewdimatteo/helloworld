-- *** respawn 
-- call this function in _update()
function respawn()

	-- flag number for pit tiles
	pit = 7
	
	-- check for collision
	-- with pit tile
	if mcollide(plyr,⬇️,pit)
	and plyr.dy > 0 then

		-- lose a life
		plyr.lives -= 1 

		-- play sound
		sfx(0)

		-- return to start
		plyr.x = plyr.startx
		plyr.y = plyr.starty 
	end -- /if mcollide down
	
end -- /function respawn()
