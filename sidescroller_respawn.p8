-- sidescrolling platformer
-- respawn example
-- by matthew dimatteo

-- tab 0: game loop
-- tab 1: make player
-- tab 2: move player
-- tab 3: map collision
-- *** tab 4: respawn

-- runs once at start
-- variables, objects
function _init()

	-- physics
	fric = 0.85 -- friction
	grav = 0.3 -- gravity

	-- variables for plyr
	make_plyr() -- tab 1
	
end -- /function _init()

-- runs 30x/sec
-- movement, calculation
function _update()
	move_plyr() --  tab 2
	respawn() -- *** tab 4 
end -- /function _update()

-- runs 30x/sec
-- output/graphics
function _draw()
	cls() -- refresh screen
	map() -- draw map

	-- draw player sprite
	spr(plyr.n,plyr.x,plyr.y,plyr.w/8,plyr.h/8,plyr.flip)

	-- print hud
	print("lives:  "..plyr.lives,12,2,0)
	print("health: "..plyr.health,12,10,0)

end -- /function _draw()
